#include<stdio.h>
int main()
{ 
int a,b;
char operator;
printf("Enter the value of A : ");
scanf("%d",&a);
printf("Enter the value of B : ");
scanf("%d",&b);
printf("Choose the operator");
scanf("%c",&operator);
switch(operator)
{
case '+':
printf("The ADDITION of two number is %d",a+b);
break;
case '-':
printf("The SUBTRACTION of two number is %d",a-b);
break;
case '*':
printf("The MULTIPLICATION of two number is %d",a*b);
break;
case '/':
printf("The DIVISION of two number is %d",a/b);
break;
case '%':
printf("The MOD of two number is %d",a%b);
break;
}
return 0;
}
